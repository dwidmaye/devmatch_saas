!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Dev Match
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript'
    = javascript_include_tag 'application'
    = tag :meta, :name => 'stripe-key', :content => STRIPE_PUBLIC_KEY
  %body
    %nav.navbar.navbar-inverse.navbar-static-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#main-nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to root_path, class: 'navbar-brand' do
            %i.fa.fa-users
            Dev Match
          
        #main-nav-collapse.collapse.navbar-collapse
          .nav.navbar-nav.navbar-right
            - if current_user
              =button_to "Sign out", destroy_user_session_path, class: 'btn btn-primary navbar-btn', method: :delete
            -else
              =link_to "Log in", new_user_session_path, class: 'btn btn-primary navbar-btn', method: :get
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "About", about_path
            %li= link_to "Contact Us", new_contact_path
        / /.navbar-collapse  
    .container
      = yield
